class Solution(object):
    def searchInsert(self, nums, target):
       
        left=0
        right=len(nums)-1

        while left<=right:
            mid=(left+right)//2       #make a mid point for value 
            if nums[mid]==target:     # now check if our target value is equal to mid 
                return mid 
            elif nums[mid]<target:     #if mid value is small check the lfthalf only 
                left=mid+1
            else:
                right=mid-1             #if value is large check for right half only
        return left 
        
